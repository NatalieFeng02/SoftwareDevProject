    }



</style>

<script>
window.addEventListener('load', () => {
  const title = sessionStorage.getItem('selectedTitle');
  const artist = sessionStorage.getItem('selectedArtist');
  const album = sessionStorage.getItem('selectedAlbum');

  if (title && artist && album) {
    document.querySelector('.your-title-class').innerText = title;
    document.querySelector('.your-artist-class').innerText = artist;
    document.querySelector('.your-album-class').innerText = album;
    // If you have a button or link to navigate to /background, it's already there
  }
});
</script>
