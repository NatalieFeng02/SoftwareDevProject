{{> header}}
{{> in_nav}}

<div class="container my-5">
  <div class="row" id="top">
    <div class="col-md-8" id="title">
      <h2 class="font-weight-bold" style="font-size: 48px;">{{title}}</h2>
      <p class="font-italic" style="font-size: 24px;">{{artist}}</p>
      <p style="font-size: 18px;">{{album}}</p>
      <button onclick="location.href='/background'" class="btn btn-dark mt-3">Background</button>
    </div>
    <div class="col-md-4" id="spotify-embed">
      <!-- Spotify Embed Placeholder -->
      {{#if spotifyUri}}
        <!-- Correct usage -->
        <iframe src="https://open.spotify.com/embed/track/{{{spotifyUri}}}" width="600" height="352" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
      {{/if}}

    </div> 
  </div>

  <!-- Analysis Section -->
  <div class="row mt-5" id="outer-div">
    {{#each analysisResults}}
      <div class="col-12 mb-4">
        <div class="row">
          <div class="col-md-6" id="lyrics">
            <pre>{{{this.lyric}}}</pre>
          </div>
          <div class="col-md-6" id="analysis">
            <p>{{{this.analysis}}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

{{> footer}}


<!-- Additional styles -->
<style>
  body {
    font-family: Arial, sans-serif; /* or the font you're using */
  }
  .btn-dark {
    background-color: #000;
    color: #fff;
    border: none;
  }
  .btn-dark:hover {
    background-color: #333;
  }

  .col-md-6 {
    display: flex;
    align-items: center;
  }
  /* Add other styling as needed */


    @font-face {
    font-family: 'Futura';
    src: url('../../public/fonts/futura/FUTURA45LIGHT.TTF') format('TTF'),
        
    font-weight: light;
    font-style: normal;
    }


  #analysis p{
    padding: 20px;
    font-family: 'Futura', Arial, sans-serif;
    border: 6px solid gray;
    margin-left: 30px;
    margin-right: 10px;
  }

  #lyrics pre {
    text-decoration: underline;
