{{> header}}

<div class="container my-5">
  <!-- Upper Section -->
  <div class="row">
    <div class="col-md-8">
      <h2 class="font-weight-bold" style="font-size: 48px;">{{title}}</h2>
      <p class="font-italic" style="font-size: 24px;">{{artist}}</p>
      <p style="font-size: 18px;">{{album}}</p>
      <button onclick="location.href='/history'" class="btn btn-dark mt-3">Historical Context</button>
    </div>
    <div class="col-md-4">
      <div class="spotify-embed">
        <!-- Spotify Embed Goes Here -->
      </div> 
    </div>
  </div>

  <!-- Lower Section -->
  <div class="row mt-5">
    <div class="col-md-6">
      <!-- Lyrics go here -->
    </div>
    <div class="col-md-6">
      <!-- Lyrical analysis goes here -->
    </div>
  </div>
</div>

{{> footer}}

